@page "/rating"
@using AwesomeBlazor.Components.Rating
<h3>RatingPage</h3>


<Row>
    <Column>
        <Heading Size="HeadingSize.Is4">Normal</Heading>
        <AwRating SelectedValue="@SelectedValue"
                  SelectedValueChanged="@((i) => SelectedValue = i)"
                  MaxValue="10">
        </AwRating>
        <br />
        - @SelectedValue -
    </Column>
</Row>

<Row>
    <Column>
        <Heading Size="HeadingSize.Is4">Disabled</Heading>
        <AwRating SelectedValue="@SelectedValue"
                  SelectedValueChanged="@((i) => SelectedValue = i)"
                  MaxValue="10"
                  Disabled="true">
        </AwRating>
    </Column>
</Row>

<Row>
    <Column>
        <Heading Size="HeadingSize.Is4">Readonly</Heading>
        <AwRating SelectedValue="@SelectedValue"
                  SelectedValueChanged="@((i) => SelectedValue = i)"
                  MaxValue="10"
                  ReadOnly="true">
        </AwRating>
    </Column>
</Row>


<Heading Size="HeadingSize.Is5">Material icons</Heading>
<AwRating SelectedValue="@SelectedMaterialValue"
          SelectedValueChanged="@((i) => SelectedMaterialValue = i)"
          FullIcon="@("star")"
          EmptyIcon="@("star_outline")"
          FullIconStyle="@(IconStyle.Solid)"
          EmptyIconStyle="@(IconStyle.Solid)">
</AwRating>

<br />
- @SelectedMaterialValue -

@code {
    public int SelectedValue { get; set; } = 2;
    public int SelectedMaterialValue { get; set; } = 2;
}
