@page "/datagrid/aggregation/view"

<Heading Size="HeadingSize.Is3">Datagrid aggregation</Heading>

<DataGrid TItem="Product"
          Data="Products"
          TotalItems="Products.Count"
          ShowPager="true"
          PagerPosition="DataGridPagerPosition.TopAndBottom"
          ShowPageSizes="true"
          Striped="true"
          Bordered="true"
          Responsive="true">
    <EmptyTemplate>No records...</EmptyTemplate>
    <DataGridAggregates>
        <DataGridAggregate TItem="Product" Field="@(nameof(Product.AvailableInStock))" Aggregate="DataGridAggregateType.Sum">
        </DataGridAggregate>
        <DataGridAggregate TItem="Product" Field="@(nameof(Product.Year))" Aggregate="DataGridAggregateType.Count" />
    </DataGridAggregates>
    <DataGridColumns>
        <DataGridColumn TItem="Product" Field="@(nameof(Product.Name))" Caption="Product Name" Sortable="true"></DataGridColumn>
    </DataGridColumns>
</DataGrid>