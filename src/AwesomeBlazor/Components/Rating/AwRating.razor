@inherits BaseComponent

@*<span class="@ClassName" style="@Style">*@
<span>
    <CascadingValue Value="this">
        @for (int i = 1; i <= MaxValue; i++)
        {
            <AwRatingItem Class="@RatingItemsClass" Style="@RatingItemsStyle" ItemValue="@i"
                           Disabled="Disabled" ReadOnly="ReadOnly" Color="Color"
                           Size="Size" ItemClicked="HandleItemClicked" ItemHovered="HandleItemHovered" />
        }
    </CascadingValue>
</span>